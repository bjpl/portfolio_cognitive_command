{
  "version": "1.0.0",
  "system": {
    "name": "ruvector-semantic-analyzer",
    "enabled": true,
    "provider": "ruvector",
    "embeddingModel": "text-embedding-3-small",
    "dimensions": 1536,
    "maxTokens": 8192
  },
  "strategicCentroids": {
    "experience": {
      "name": "Experience Cluster",
      "description": "Frontend, UI/UX, Mobile, and User-facing components",
      "keywords": [
        "react",
        "vue",
        "angular",
        "ui",
        "ux",
        "component",
        "css",
        "sass",
        "tailwind",
        "styled-components",
        "mobile",
        "responsive",
        "accessibility",
        "a11y",
        "design-system",
        "storybook",
        "figma",
        "animation",
        "framer-motion",
        "frontend",
        "client-side",
        "browser",
        "dom",
        "jsx",
        "tsx"
      ],
      "filePatterns": [
        "**/*.jsx",
        "**/*.tsx",
        "**/components/**",
        "**/pages/**",
        "**/views/**",
        "**/*.css",
        "**/*.scss",
        "**/*.styled.*",
        "**/public/**",
        "**/assets/**"
      ],
      "weight": 1.0,
      "color": "#3b82f6"
    },
    "coreSystems": {
      "name": "Core Systems Cluster",
      "description": "Backend services, APIs, databases, authentication, and business logic",
      "keywords": [
        "api",
        "rest",
        "graphql",
        "grpc",
        "database",
        "postgres",
        "mysql",
        "mongodb",
        "redis",
        "auth",
        "authentication",
        "authorization",
        "oauth",
        "jwt",
        "session",
        "middleware",
        "controller",
        "service",
        "repository",
        "model",
        "schema",
        "migration",
        "orm",
        "prisma",
        "typeorm",
        "sequelize",
        "backend",
        "server",
        "node",
        "express",
        "fastify",
        "nest",
        "go",
        "python",
        "django",
        "flask"
      ],
      "filePatterns": [
        "**/api/**",
        "**/server/**",
        "**/backend/**",
        "**/controllers/**",
        "**/services/**",
        "**/models/**",
        "**/repositories/**",
        "**/middleware/**",
        "**/routes/**",
        "**/database/**",
        "**/migrations/**",
        "**/schemas/**",
        "**/*.go",
        "**/*.py",
        "**/prisma/**",
        "**/*.sql"
      ],
      "weight": 1.2,
      "color": "#10b981"
    },
    "infrastructure": {
      "name": "Infrastructure Cluster",
      "description": "DevOps, deployment, CI/CD, cloud services, and infrastructure as code",
      "keywords": [
        "docker",
        "dockerfile",
        "kubernetes",
        "k8s",
        "helm",
        "terraform",
        "aws",
        "azure",
        "gcp",
        "cloud",
        "lambda",
        "s3",
        "ec2",
        "rds",
        "cloudformation",
        "ci",
        "cd",
        "pipeline",
        "github-actions",
        "gitlab-ci",
        "jenkins",
        "travis",
        "circleci",
        "deployment",
        "deploy",
        "infrastructure",
        "monitoring",
        "logging",
        "prometheus",
        "grafana",
        "elk",
        "nginx",
        "apache",
        "load-balancer",
        "cdn",
        "cloudflare"
      ],
      "filePatterns": [
        "**/Dockerfile",
        "**/docker-compose*.yml",
        "**/.github/workflows/**",
        "**/.gitlab-ci.yml",
        "**/terraform/**",
        "**/*.tf",
        "**/k8s/**",
        "**/kubernetes/**",
        "**/helm/**",
        "**/infrastructure/**",
        "**/deployment/**",
        "**/scripts/**",
        "**/*.sh",
        "**/nginx.conf",
        "**/Jenkinsfile"
      ],
      "weight": 1.1,
      "color": "#f59e0b"
    }
  },
  "embeddingConfig": {
    "batchSize": 100,
    "parallel": true,
    "maxConcurrency": 5,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "timeout": 30000,
    "cacheEnabled": true,
    "cacheTTL": 86400
  },
  "clusteringConfig": {
    "algorithm": "cosine-similarity",
    "threshold": 0.65,
    "minimumConfidence": 0.5,
    "multiClusterAllowed": false,
    "fallbackCluster": "coreSystems"
  },
  "preprocessing": {
    "normalizeCase": true,
    "removeStopWords": true,
    "stemming": false,
    "maxInputLength": 8000,
    "includeFilePaths": true,
    "includeCommitMessages": true,
    "includeDiffSummary": true,
    "diffContextLines": 3
  },
  "outputFormat": {
    "includeVector": false,
    "includeConfidenceScores": true,
    "includeTopKeywords": true,
    "topKeywordsCount": 10,
    "includeClusterProbabilities": true
  },
  "performance": {
    "enableProgressLogging": true,
    "logLevel": "info",
    "metricsEnabled": true,
    "metricsPath": ".claude-flow/metrics/ruvector-metrics.json"
  }
}
