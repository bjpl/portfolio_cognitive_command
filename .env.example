# Portfolio Cognitive Command - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Claude API Configuration (Primary)
# =============================================================================

# Anthropic API key for Claude - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Claude model to use for semantic analysis
CLAUDE_MODEL=claude-sonnet-4-20250514

# Enable Claude API for embeddings (true/false)
USE_CLAUDE_API=true

# =============================================================================
# OpenAI API Configuration (Fallback)
# =============================================================================

# OpenAI API key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI embedding model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Embedding vector dimensions (256, 512, 1024, 1536, 3072)
EMBEDDING_DIMENSIONS=1536

# Enable OpenAI API as fallback (true/false)
USE_OPENAI_API=false

# =============================================================================
# Project Paths
# =============================================================================

# Directory to scan for repositories
SCAN_DIR=

# Path to AgentDB JSON file
AGENTDB_PATH=data/agentdb.json

# Output directory for generated files
OUTPUT_DIR=output

# =============================================================================
# Analysis Settings
# =============================================================================

# Semantic drift detection threshold (0.0 - 1.0)
DRIFT_THRESHOLD=0.7

# Cluster size limits
MIN_CLUSTER_SIZE=2
MAX_CLUSTER_SIZE=10

# =============================================================================
# System Settings
# =============================================================================

# Enable verbose logging (true/false)
VERBOSE=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Fall back to keyword-based analysis when API unavailable
FALLBACK_TO_KEYWORDS=true
